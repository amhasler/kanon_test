- provide(:title, @user.name)
- flash.each do |key, value|
  .alert{ class: "alert-#{ key }" }
    = value

.row
  %aside.span4
    %section
      %h1
        = gravatar_for @user
        = @user.name

  .span8
    - if @user.artobjects.any?
      %h3 Art objects (#{ @user.artobjects.count })
      %ol.artobjects
        = render @artobjects

      = will_paginate @artobjects