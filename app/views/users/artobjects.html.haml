- provide(:title, "#{@user.name}'s Favorites" )
- flash.each do |key, value|
  .alert{ class: "alert-#{ key }" }
    = value


.top-bar
  .container.show-new-container
    .row
      .span12
        - flash.each do |key, value|
          .alert{ class: "alert-#{ key }" }
            = value

    .row
      %aside.span8.offset2
        %h1 #{ @user.name }'s Favorites
        #cta
          %h2#new_artobject Want to find more works you'll love? #{ link_to "See all works", artobjects_path }

.bottom-bar
  .container
    .row
      %ol.tile-container#artobject_container
        - if @artobjects.nil?
          .span8
            %h1 We didn't find any favorites.
            %p This is your chance to add a work that we're missing! Or you can always #{ link_to "start over", artobjects_path }.

        - else
          = render @artobjects


